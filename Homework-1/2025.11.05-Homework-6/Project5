#include<stdio.h>

int main(int argc, char** argv)
{
    std::ifstream inputFile("INPUT.TXT");
    std::ofstream outputFile("OUTPUT.TXT");
    
    int N;
    inputFile >> N;
    
    int* array = new int[N];
    
    for (int i = 0; i < N; i++) {
        inputFile >> array[i];
    }
    
    bool found = false;
    
    for (int i = 1; i < N; i++) {
        if ((array[i] > 0 && array[i - 1] > 0) || (array[i] < 0 && array[i - 1] < 0)) {
            found = true;
            break;
        }
    }
    
    if (found) {
        outputFile << "YES";
    } else {
        outputFile << "NO";
    }
    
    delete[] array;
    return 0;
}
