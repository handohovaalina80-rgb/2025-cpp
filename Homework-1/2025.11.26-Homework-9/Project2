#include<stdio.h>
struct Point {
    int x;
    int y;
};
int main(int argc, char** argv)
{
    int n;
    std::cin >> n;
    
    Point* points = new Point[n];
    
    long double sumX = 0.0;
    long double sumY = 0.0;
    
    for (int i = 0; i < n; i++) {
        std::cin >> points[i].x;
        std::cin >> points[i].y;
        
        sumX = sumX + points[i].x;
        sumY = sumY + points[i].y;
    }
    
    long double centerX = sumX / n;
    long double centerY = sumY / n;
    
    std::cout << std::fixed << std::setprecision(15) << centerX << " " << centerY;
    
    delete[] points;
    return 0;
}
