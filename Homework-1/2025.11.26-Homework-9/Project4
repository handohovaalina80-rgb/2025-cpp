#include<stdio.h>
struct Point {
    int x;
    int y;
};
int main(int argc, char** argv)
{

long double distanceBetween(Point p1, Point p2) {
    long double dx = p1.x - p2.x;
    long double dy = p1.y - p2.y;
    return sqrt(dx * dx + dy * dy);
}
    int n;
    std::cin >> n;
    
    Point* points = new Point[n];
    
    for (int i = 0; i < n; i++) {
        std::cin >> points[i].x;
        std::cin >> points[i].y;
    }
    
    long double maxPerimeter = 0.0;
    
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            for (int k = j + 1; k < n; k++) {
                long double a = distanceBetween(points[i], points[j]);
                long double b = distanceBetween(points[j], points[k]);
                long double c = distanceBetween(points[k], points[i]);
                
                long double perimeter = a + b + c;
                
                if (perimeter > maxPerimeter) {
                    maxPerimeter = perimeter;
                }
            }
        }
    }
    
    std::cout << std::fixed << std::setprecision(15) << maxPerimeter;
    
    delete[] points;
    return 0;
}


