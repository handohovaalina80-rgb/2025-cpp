#include<stdio.h>
struct Point {
    int x;
    int y;
};
int main(int argc, char** argv)
{
    int n;
    std::cin >> n;
    
    Point* points = new Point[n];
    
    for (int i = 0; i < n; i++) {
        std::cin >> points[i].x;
        std::cin >> points[i].y;
    }
    
    long double maxDistance = 0.0;
    
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            long double dx = points[i].x - points[j].x;
            long double dy = points[i].y - points[j].y;
            long double distance = sqrt(dx * dx + dy * dy);
            
            if (distance > maxDistance) {
                maxDistance = distance;
            }
        }
    }
    
    std::cout << std::fixed << std::setprecision(15) << maxDistance;
    
    delete[] points;
    return 0;
}


