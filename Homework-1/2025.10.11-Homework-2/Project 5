#include<stdio.h>

int main(int argc, char** argv)
{
    std::ifstream inputFile("INPUT.TXT");
    std::ofstream outputFile("OUTPUT.TXT");
    
    int N;
    inputFile >> N;
    
    int result;
    
    if (N == 1) {
        result = 0;
    } else if (N % 2 == 0) {
        result = N / 2;
    } else {
        result = N;
    }
    
    outputFile << result;
    
    return 0;
}
